@page
@model ItCareerExam.WebApp.Pages.Reviews.DeleteReviewModel
@{
}

<h1>Are you sure you want to delete this review?</h1>

<form method="post">
    <dl class="row">
        <dt class="col-sm-2">
            Restaurant
        </dt>
        <dd class="col-sm-10">
            @Model.Review.Restaurant.Name
        </dd>
        <dt class="col-sm-2">
            Photo
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.Review.Restaurant.PhotoUrl" height="200" width="auto" />
        </dd>
        <dt class="col-sm-2">
            User First Name
        </dt>
        <dd class="col-sm-10">
            @Model.Review.User.FirstName
        </dd>
        <dt class="col-sm-2">
            User Last Name
        </dt>
        <dd class="col-sm-10">
            @Model.Review.User.LastName
        </dd>
        <dt class="col-sm-2">
            Feedback
        </dt>
        <dd class="col-sm-10">
            @Model.Review.Feedback
        </dd>
    </dl>

    <button type="submit" class="btn danger" style="background-color:red; color:white; border-color:red">Delete</button>
</form>

<a asp-page="./@Model.ReturnPage">Back</a>