@page
@model ItCareerExam.WebApp.Pages.Restaurants.DeleteRestaurantModel
@{
}

<h1>Are you sure you want to delete this restaurant?</h1>

<form method="post">
    <input asp-for="Restaurant.Id" type="hidden" />
    <input asp-for="Restaurant.Name" type="hidden" />
    <input asp-for="Restaurant.Description" type="hidden" />
    <input asp-for="Restaurant.PhotoUrl" type="hidden" />

    <dl class="row">
        <dt class="col-sm-2">
            Restaurant
        </dt>
        <dd class="col-sm-10">
            @Model.Restaurant.Name
        </dd>
        <dt class="col-sm-2">
            Photo
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.Restaurant.PhotoUrl" width="400" height="auto">
        </dd>
    </dl>

    <button type="submit" class="btn danger" style="background-color:red; color:white; border-color:red">Delete</button>
</form>

<a asp-page="./RestaurantsIndex">Back</a>