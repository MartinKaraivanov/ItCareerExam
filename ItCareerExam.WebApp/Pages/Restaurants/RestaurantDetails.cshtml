@page
@model ItCareerExam.WebApp.Pages.Restaurants.RestaurantDetailsModel
@{
}

<h1>Restaurant Details</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Restaurant.Name
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.Restaurant.Description
        </dd>
        <dt class="col-sm-2">
            Photo
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.Restaurant.PhotoUrl" width="600" height="auto" />
        </dd>
    </dl>
</div>

<br />

<div>
    <h3>Write A Review</h3>
    <form method="post">
        <div class="mb-2">
            <input asp-for="Feedback" type="text" placeholder="Review" required/>
        </div>
        <div>
            <button type="submit" class="btn danger" style="background-color:midnightblue; color:white; border-color:midnightblue">Submit Review</button>
        </div>
    </form>
    <br />
</div>

<a asp-page="./RestaurantsIndex">Back</a>