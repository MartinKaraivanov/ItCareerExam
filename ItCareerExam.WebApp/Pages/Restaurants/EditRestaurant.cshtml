@page
@model ItCareerExam.WebApp.Pages.Restaurants.EditRestaurantModel
@{
}

<h1>Edit Restaurant</h1>

<form method="post">
	<input asp-for="Restaurant.Id" type="hidden" />
	<div class="pb-2">
		<label asp-for="Restaurant.Name">Name</label>
		<input asp-for="Restaurant.Name" type="text" placeholder="Name" required />
	</div>
	<div class="pb-2">
		<label asp-for="Restaurant.Description">Description</label>
		<input asp-for="Restaurant.Description" placeholder="Description" required />
	</div>
	<div class="pb-2">
		<label asp-for="Restaurant.PhotoUrl">Photo</label>
		<input asp-for="Restaurant.PhotoUrl" type="text" placeholder="Photo URL" required />
	</div>

	<button type="submit">Update</button>
</form>

<a asp-page="./RestaurantsIndex">Back</a>