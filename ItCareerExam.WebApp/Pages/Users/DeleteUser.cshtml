@page
@model ItCareerExam.WebApp.Pages.Users.DeleteUserModel
@{
}

<h1>Are you sure you want to delete this user?</h1>

<form method="post">
    <input asp-for="UserEditModel.Id" type="hidden" />
    <input asp-for="UserEditModel.Email" type="hidden" />
    <input asp-for="UserEditModel.FirstName" type="hidden" />
    <input asp-for="UserEditModel.LastName" type="hidden" />
    <input asp-for="UserEditModel.UserName" type="hidden" />
    <input asp-for="UserEditModel.Password" type="hidden" />

    <dl class="row">
        <dt class="col-sm-2">
            User First Name
        </dt>
        <dd class="col-sm-10">
            @Model.UserEditModel.FirstName
        </dd>
        <dt class="col-sm-2">
            User Last Name
        </dt>
        <dd class="col-sm-10">
            @Model.UserEditModel.LastName
        </dd>
        <dt class="col-sm-2">
            User Email
        </dt>
        <dd class="col-sm-10">
            @Model.UserEditModel.Email
        </dd>
    </dl>

    <button type="submit" class="btn danger" style="background-color:red; color:white; border-color:red">Delete</button>
</form>

<a asp-page="./UsersIndex">Back</a>