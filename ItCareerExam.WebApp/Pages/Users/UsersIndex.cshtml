@page
@model ItCareerExam.WebApp.Pages.Users.UsersIndexModel
@{
}

<h1>All Users</h1>
<a asp-page="./CreateUser">Add New</a>

<table class="table">
    <thead>
        <tr>
            <th>
                <p>First Name</p>
            </th>
            <th>
                <p>Last Name</p>
            </th>
            <th>
                <p>Email</p>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>
                    @user.FirstName
                </td>
                <td>
                    @user.LastName
                </td>
                <td>
                    @user.Email
                </td>
                <td>
                    <a asp-page="./EditUser" asp-route-id="@user.Id">Edit</a> |
                    <a asp-page="./UserDetails" asp-route-id="@user.Id">Details</a> |
                    <a asp-page="./DeleteUser" asp-route-id="@user.Id" style="color:red">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-page="../Index">Back</a>